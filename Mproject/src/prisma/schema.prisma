model Review {
  id         BigInt     @id @default(autoincrement())
  lecture_id BigInt
  member_id  BigInt
  subject    String
  rating     Int
  content    String
  picture    Bytes
  period     String
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  Lecture    Lecture     @relation(fields: [lecture_id], references: [id])
}

model Lecture {
  id          BigInt      @id @default(autoincrement())
  name        String
  teacher     String
  platform    String
  review_rating Float
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  Review      Review[]
}
